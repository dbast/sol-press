{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests",
    "regexManagers:githubActionsVersions"
  ],
  "git-submodules": {
    "enabled": true
  },
  "pre-commit": {
    "enabled": true
  },
  "regexManagers": [
    {
      "description": "Upgrade versions in Makefile",
      "fileMatch": ["Makefile"],
      "matchStrings": [
        "# renovate\\sdatasource=(?<datasource>.*?)\\s+depName=(?<depName>.*?)\\s+(versioning=(?<versioning>.*?)\\s+)?([A-Za-z_][A-za-x0-9_]*)?VERSION\\s+\\?=\\s+(?<currentValue>.*)"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ]
}
